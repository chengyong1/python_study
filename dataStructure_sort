def LinerSearch(content, target):  # 线性搜索
    n = len(content)
    for index in range(n):
        if content[index] == target:
            return index           # 返回待查找元素所在位置
    return False


def SortedLinerSearch(content, target):  # 有序的线性序列查找
    n = len(content)
    for index in range(n):
        if content[index] == target:
            return index
        elif content[index] > target:
            return False
    return False


def FindSmallest(content):  # 找最小
    n = len(content)
    smallest = content[0]
    for index in range(1, n):
        if content[index] < smallest:
            smallest = content[index]
    return smallest


def BinarySearch(content, target):
    low = 0
    high = len(content) - 1
    while low <= high:
        mid = (low + high) // 2  # 相当于int((low+high)/2)
        if content[mid] == target:
            return mid
        elif target > content[mid]:
            low = mid + 1
        else:
            high = mid - 1
    return False


def BubbleSort(content):  # 冒泡排序
    n = len(content)
    for i in range(n - 1):
        for j in range(n - 1 - i):
            if content[j] > content[j + 1]:
                content[j], content[j + 1] = content[j + 1], content[j]
    return content


def SelectionSort(content):  # 选择排序
    n = len(content)
    for i in range(n - 1):
        small_index = i
        for j in range(i + 1, n):
            if content[j] < content[small_index]:
                small_index = j
        if small_index != i:
            content[i], content[small_index] = content[small_index], content[i]
    return content


def InsertSort(content):  # 插入排序
    n = len(content)
    for i in range(1, n):
        value = content[i]
        pop = i
        '''while循环是找到每一个目标正确的位置'''
        while pop > 0 and value < content[pop - 1]:
            content[pop] = content[pop - 1]
            pop = pop - 1
        content[pop] = value
    return content


def TwoListResort(listA, listB):  # 将两个有序序列重新组合成一个有序的新的序列
    newlist = list()
    a = 0
    b = 0
    while a < len(listA) and b < len(listB):
        if listA[a] < listB[b]:
            newlist.append(listA[a])
            a = a + 1
        else:
            newlist.append(listB[b])
            b = b + 1
    while a < len(listA):
        newlist.append(listA[a])
        a = a + 1
    while b < len(listB):
        newlist.append(listB[b])
        b = b + 1
    return newlist
